<div class="row">
<div class="col-xs-3">
	<%= render partial:'books/new',locals: {user: current_user, book:@book} %>
</div>
	<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
						</tr>
					</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td>
							<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpeg', class:"image-thumbnail", fallback: "no_image.jpg" %>
							</td>
							<td><%= user.name %></td>
							<td><%= link_to 'Show', user_path(user) %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
