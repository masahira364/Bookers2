	<p id="notice"><%= notice %></p>

	<% if book.errors.any? %>
		<div id="error_explanation">
			<h3><%= book.errors.count %> errors prohibited this obj from being saved: </h3>
			<ul>
				<%= book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>



			<h2>User info</h2>
			<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpeg', class:"image-thumbnail", fallback: "no_image.jpg" %>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
						<th><%= user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= user.introduction %></th>
					</tr>
				</tbody>
			</table>

		<div class="row">
			<% if user == current_user %>
		<%=link_to edit_user_path(user), class:'col-xs-12 btn btn-default btn-block' do %>
			 	<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		<% end %>
		<% else %>
			<%=link_to user_path(current_user), class:'col-xs-12 btn btn-default btn-block' do %>
			 	<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			 <% end %>
			 <% end %>
		</div>



			<h2>New book</h2>

	  		<%= form_for(book) do |f| %>
				<div class="field row">
					<label for= book_title>Title</label>
					<%= f.text_field :title, class:"col-xs-12" %>
				</div>

				<div class="field row">
					<label for= book_body>Opnion</label>
					<%= f.text_area :body, class:"col-xs-12" %>
				</div>

				<div class="field row">
					<%= f.submit 'Create Book', class:"btn btn-primary btn-block" %>
					</div>
				<% end %>