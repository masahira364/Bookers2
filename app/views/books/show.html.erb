
<div class="row">
	<div class="col-xs-3">

		<%= render partial:'books/new',locals: {book:@book_new,user:@user} %>
	</div>

		<div class="col-xs-9">
		<h2>Book detail</h2>
				<table class="table">
					<tbody>
						<tr>
							<td>
							 <%= link_to user_path(@book.user) do %>
							 <%= attachment_image_tag @user, :profile_image,:fill, 100, 100, format:'jpeg', class:"image-thumbnail",fallback: "no_image.jpg" %><br>
							 <%= @book.user.name %>
							 <% end %>
							 </td>
							<td><%= @book.title %></td>
							<td><%= @book.body %></td>

							<% if @book.user == current_user %>
							<td><%= link_to 'Edit',edit_book_path(@book) %></td>
							<td><%= link_to 'Destroy',book_path(@book), method: :delete %></td>
							<% end %>
						</tr>
					</tbody>
				</table>
		</div>
	</div>