<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse" style="color: white;">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to user_path(current_user) do %> 
                <span class=" glyphicon glyphicon-home" aria-hidden="true"> Home</span>
              </li>
              <% end %>
              <li><%= link_to users_path do %> 
                <span class="glyphicon glyphicon-user" aria-hidden="true"> Users</span>
              </li>
              <% end %>
              <li><%=link_to books_path do %>
                <span class="glyphicon glyphicon-book" aria-hidden="true"> Books </span>
                </li>
                <% end %>
             <li><%=link_to destroy_user_session_path, :method => :delete do %>
               <span class="glyphicon glyphicon-log-out"> logout</span>
              </li>
              <% end %>
        <% else %>
            <li><%=link_to root_path do %>
             <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
           </li>
           <% end %>
            <li><%= link_to home_about_path do %>
              <span class="glyphicon glyphicon-link" aria-hidden="true"> About</span>
            </li>
            <% end %>
            <li><%=link_to new_user_registration_path do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"> sign up</span>
            </li>
            <% end %>
            <li><%= link_to new_user_session_path, notice:'Signed out successfully.' do %>
              <span class="glyphicon glyphicon-log-in" aria-hidden="true"> login</span>
            </li>
            <% end %>
          <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
